[user]
	name = Jeff DeCew
	email = jdecew@pocketgems.com
[color]
	ui = always
[core]
	editor = nano
	autocrlf = false
	whitespace = cr-at-eol
[alias]
	sgrep = "!f() { git --no-pager grep \"$1\"; git submodule foreach --recursive \"git --no-pager grep '$1'; true\" | grep -B 1 \"$1\"; }; f"
	co = checkout
	cpick = cherry-pick
[push]
	default = upstream
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[merge]
	tool = diffmerge
